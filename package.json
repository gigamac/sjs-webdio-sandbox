    "build:mock": "rm -rf ./mock_node/dist && ttsc -p mock_node/tsconfig.json && cp -R ./testData ./mock_node/dist/",
    "start:mock": "node ./mock_node/dist/index.js",
    "ser:start-mock-server": "npm run build:mock && npm run start:mock",
